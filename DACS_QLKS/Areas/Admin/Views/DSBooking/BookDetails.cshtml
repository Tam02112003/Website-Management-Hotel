                        <tr>
                            <th>Tổng số đêm</th>
                            <td>@totalNights đêm</td>
                        </tr>
                        <tr>
                            <th>Tổng tiền phòng</th>
                            <td>@String.Format("{0:0,0}", Model.RoomPrice) VND</td>
                        </tr>
                        <tr>
                            <th>Tổng tiền dịch vụ</th>
                            <td>@String.Format("{0:0,0}", Model.ServicePrice) VND</td>
                        </tr>
                        <tr>
                            <th>Thanh Toán: </th>
                            <td>@String.Format("{0:0,0}", Model.TotalPrice) VND</td>
                        </tr>
                    </table>

                    <h2>Hình thức thanh toán</h2>
                    <p>Trả sau</p>

                   
                    <a asp-area="Admin" asp-controller="DichVu" asp-action="AddServicesToBooking" asp-route-bookingId="@Model.Id">Thêm Dịch vụ</a>


