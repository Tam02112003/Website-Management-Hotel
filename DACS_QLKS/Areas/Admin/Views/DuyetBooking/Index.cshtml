                                    <h1>Duyệt đơn phòng</h1>
                               

                                </div>

                            </div>
                        </div>
                    </div>
                </section>
                @if (Model.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Khách Hàng</th>
                                <th>SĐT</th>
                                <th>Tên Phòng</th>
                                <th>Tiền Phòng</th>
                                <th>Ngày Nhận Phòng</th>
                                <th>Ngày Trả Phòng</th>
                                <th>Xác Nhận</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>@booking.Id</td>
                                    <td>@booking.CustomerName</td>
                                    <td>@booking.CustomerPhone</td>
                                    <td>@booking.Phong.Name</td>
                                    <td>@String.Format("{0:0,0}", booking.RoomPrice)</td>
                               
                                    <td>@booking.CheckInDate</td>
                                    <td>@booking.CheckOutDate</td>  
                                    
                                    <td>
                                        @using (Html.BeginForm("ApproveBooking", "DuyetBooking", new { bookingId = booking.Id }, FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-success">Duyệt</button>
                                        }
                                        @using (Html.BeginForm("RejectBooking", "DuyetBooking", new { bookingId = booking.Id }, FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger">Từ chối</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>
                        <h3>Không có đơn đặt phòng chưa được duyệt.</h3>
                    </div>
                }
