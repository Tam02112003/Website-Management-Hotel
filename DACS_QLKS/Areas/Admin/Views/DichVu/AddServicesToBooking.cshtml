    <title>Menu Dịch vụ</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            width: 100%;
        }

        .header {
            background-color: #333;
            padding: 20px;
            color: #fff;
            text-align: center;
        }

        .footer {
            background-color: #333;
            padding: 20px;
            color: #fff;
            text-align: center;
            margin-top: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .quantity input[type="number"] {
            width: 40px;
            padding: 5px;
            text-align: center;
        }

        .quantity button {
            padding: 5px 10px;
            border-radius: 5px;
            background-color: #333;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            .quantity button:hover {
                background-color: #555;
            }

        .add-button {
            padding: 8px 16px;
            border-radius: 5px;
            background-color: #333;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            .add-button:hover {
                background-color: #555;
            }

        .back-button {
            padding: 8px 16px;
            border-radius: 5px;
            background-color: #333;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            .back-button:hover {
                background-color: #555;
            }
    </style>
</head>
<body>

    <form method="post" asp-action="AddServicesToBooking">
    <div class="container-fluid">

        <div class="row">




            <section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/big_image_1.jpg);">
                <div class="container">
                    <div class="row align-items-center site-hero-inner justify-content-center">
                        <div class="col-md-12 text-center">

                            <div class="mb-5 element-animate">
                                <h1>Sử dụng Dịch Vụ</h1>


                            </div>

                        </div>
                    </div>
                </div>
            </section>


            <div class="container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Dịch vụ</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Mô tả</th>
                            <th>Số lượng</th>


                        </tr>
                    </thead>
                    
            <input type="hidden" name="bookingId" value="@Model.Booking.Id" />
            @foreach (var service in Model.AvailableServices)
            {
        <tr>
                <td>
                   
                        @service.ServiceName
                </td>
                <td><img height="150" width="150" src="@service.ImgUrl" /></td>
                <td>@String.Format("{0:0,0}",service.Price) VND</td>
                <td>@service.Description</td>
            <td class="quantity">
                    <button class="decrease">-</button>
                    <input type="number" name="selectedServiceQuantities[@service.Id]" min="0" value="0">
                    <button class="increase">+</button>
            </td>
        </tr>

            }
                   
                    
                </table>


                    <button type="submit" class="btn btn-primary">Thêm dịch vụ</button>
                    <button class="back-button" onclick="goBack()">Quay lại</button>

            </div>
        </div>
    </div>
</form>
