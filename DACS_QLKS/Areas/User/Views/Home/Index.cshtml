@model IEnumerable<Phong>
@{
    int roomCount = 0;
}
<html lang="en">
<head>
    <title>LuxuryHotel a Hotel Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700,900|Rubik:300,400,700" rel="stylesheet">

    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <link rel="stylesheet" href="~/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/fonts/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <!-- Theme Style -->
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .room__card {
            width: 50%; /* Chiếm 50% chiều rộng để chia thành hai phòng trên một dòng */
            float: left; /* Đẩy các phòng sang trái */
            box-sizing: border-box; /* Bao gồm cả padding và border trong chiều rộng */
            padding: 10px; /* Khoảng cách giữa các phòng */
        }

        .justify {
            text-align: justify;
            font-size: 19px;
            font-family: 'Times New Roman', Times, serif;
        }
        .img-fluid{
            width:275px;

        }
    </style>
</head>
<body>

    <header role="banner">

        <nav class="navbar navbar-expand-md navbar-dark bg-light">
            <div class="container">
                <a class="navbar-brand" href="/User/Home/index">NTĐ Hotel</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse navbar-light" id="navbarsExample05">
                    <ul class="navbar-nav ml-auto pl-lg-5 pl-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/User/Home/index">Trang chủ</a>
                        </li>
                        <vc:loai-phong></vc:loai-phong>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Home/news">Tin tức & Sự kiện</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/User/Home/about">Khám phá</a>
                        </li>
                       

                        <li class="nav-item cta">
                            <a class="nav-link" href="/User/Home/rooms"><span>Đặt ngay</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="Booking" asp-action="MyBookings" title="Manage">Đơn Phòng của tôi</a>
                        </li>



                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>

        </nav>
    </header>
    <!-- END header -->
    <section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/big_image_1.jpg);">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-12 text-center">

                    <div class="mb-5 element-animate">
                        <h1>Khám phá khách sạn của chúng tôi</h1>
                        <p>"Tận hưởng những khoảnh khắc không thể nào quên tại khách sạn chúng tôi - Nơi nâng cao trải nghiệm du lịch của bạn!"</p>
                        <p><a href="/User/Home/rooms" class="btn btn-primary">Đặt phòng ngay</a></p>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- END section -->

    <section class="site-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <div class="heading-wrap text-center element-animate">
                        <h4 class="sub-heading">Stay with our luxury rooms</h4>
                        <h2 class="heading">Tận Hưởng Và Nghỉ Ngơi</h2>
                        <p class="justify">Chào mừng quý khách đến với khách sạn của chúng tôi, nơi sự sang trọng và thoải mái hòa quyện hoàn hảo. Tại đây, quý khách sẽ được trải nghiệm những phòng nghỉ đẳng cấp, tiện nghi hiện đại và dịch vụ tận tình. Hãy tận hưởng không gian yên tĩnh và thư giãn với cảnh quan tuyệt đẹp, đảm bảo mang đến cho quý khách những giây phút nghỉ ngơi đáng nhớ. Chúng tôi cam kết mang lại cho quý khách một kỳ nghỉ hoàn hảo với sự hài lòng tối đa. Hãy đến và cảm nhận sự khác biệt tại khách sạn của chúng tôi.</p>
                        
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-7">
                    <img src="~/images/f_img_1.png" alt="Image placeholder" class="img-md-fluid">
                </div>
            </div>
        </div>
    </section>
    <!-- END section -->

    <section class="site-section bg-light">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-12 heading-wrap text-center">
                    <h4 class="sub-heading">Our Luxury Rooms</h4>
                    <h2 class="heading">Phòng</h2>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    if (roomCount < 3)
                    {

                        <div class="media d-block room mb-0">
                            <div class="room__card__image">
                                <a asp-action="Details" asp-route-phongid="@item.Id">
                                    <figure>
                                        <img src="@item.ImgUrl" class="img-fluid" alt="Generic placeholder image" />
                                        <div class="overlap-text">
                                            <span>
                                                Featured Room
                                                <span class="ion-ios-star"></span>
                                                <span class="ion-ios-star"></span>
                                                <span class="ion-ios-star"></span>
                                            </span>
                                        </div>
                                    </figure>
                                </a>
                            </div>
                            <div class="media-body">
                                <h3 class="mt-0">
                                    <a asp-action="Details" asp-route-phongid="@item.Id">@item.Name</a>
                                </h3>
                                <ul class="room-specs">
                                    <li><span class="ion-ios-people-outline"></span>@item.MaxOccupancy Khách</li>
                                    <li><span class="ion-ios-crop"></span>@item.Size m<sup>2</sup></li>
                                </ul>
                                <h4>@String.Format("{0:0,0}", item.Price) VND/Đêm</h4>
                                <a asp-action="Details" asp-route-phongid="@item.Id" style="background-color: #b99365; color: white" class="btn">
                                    Chi tiết Phòng
                                </a>
                            </div>

                        </div>
                        roomCount++;
                    }
                    else
                    {
                        // Đã hiển thị ba phòng, thoát khỏi vòng lặp
                        break;
                    }
                }
                <div style="background-color:white">
                    <a href="/User/Home/rooms" class="btn">Nhiều Hơn...</a>
                </div>

            </div>



        </div>
    </section>



    <section class="section-cover" data-stellar-background-ratio="0.5" style="background-image: url(/images/img_3.jpg);">
        <div class="container">
            <div class="row justify-content-center align-items-center intro">
                <div class="col-md-9 text-center element-animate">
                    <h2>RELAX & ENJOY </h2>
                    
                   
                </div>
            </div>
        </div>
    </section>
    <!-- END section -->

   
    
    <footer class="site-footer">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-4">
                    <h3>Hỗ trợ</h3>
                    <p>24/7 Gọi Ngay.</p>
                    <p class="lead"><a href="tel://">+84776830466 </a></p>
                </div>
                <div class="col-md-4">
                    <h3>Kết nối với chúng tôi</h3>
                    <p>Theo dõi ngay</p>
                    <p>
                        <a href="#" class="pl-0 p-3"><span class="fa fa-facebook"></span></a>
                        <a href="#" class="p-3"><span class="fa fa-twitter"></span></a>
                        <a href="#" class="p-3"><span class="fa fa-instagram"></span></a>
                        <a href="#" class="p-3"><span class="fa fa-vimeo"></span></a>
                        <a href="#" class="p-3"><span class="fa fa-youtube-play"></span></a>
                    </p>
                </div>

            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 text-center">
                    &copy; <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </div>
            </div>

        </div>

    </footer>
    <!-- END footer -->
    <!-- loader -->

</body>
</html>
